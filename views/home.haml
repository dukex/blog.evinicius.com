%section#content.grid_8.omega
  - for @article in @articles
    %section.article{:id => @article.id}
      %h1
        %a{:href => article_path(@article)}= @article.title
        %span.date
          =@article.published.strftime("%Y/%m/%d")
      - if @article == @articles[0]
        %article.resume
          = @article.resume
