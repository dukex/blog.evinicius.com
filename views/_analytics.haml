- if ENV['RACK_ENV'] == 'production'
  %script{:src => "http://www.google-analytics.com/ga.js",:defer =>"defer"}

  :javascript
    try{
      var pageTracker = _gat._getTracker("UA-1984444-24");
      pageTracker._trackPageview("/");
    } catch(err) {}
      
    $(document).ready(function(){
      $('a').click(function(){
        pageTracker._trackPageview(this.href);
        return true;
      });
    });

